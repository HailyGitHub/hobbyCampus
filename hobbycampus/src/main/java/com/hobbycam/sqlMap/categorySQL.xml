<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hobby.category">
	
	<select id="selectCateOneMaxIdx" resultType="Integer">
		SELECT
			seq_cate1.NEXTVAL
		from 
			dual
	</select>
	
	
	<select id="selectCateTwoMaxIdx" resultType="Integer">
		SELECT
			seq_cate2.NEXTVAL
		from 
			dual
	</select>
	
	
	<insert id="insertCateOne" parameterType="hashmap">
		INSERT INTO
			cate1
		VALUES
			(seq_cate1.nextval,
			#{cate1_name},
			#{cate1_img}
			)
	</insert>
	
	
	<insert id="insertCateTwo" parameterType="hashmap">
		INSERT INTO
			cate2
		VALUES
			(seq_cate2.nextval,
			#{cate1_idx},
			#{cate2_name},
			#{cate2_img}
			)
	</insert>
	
	
	<select id="selectCateOneList" resultType="com.hobbycam.category.model.Cate1DTO">
		SELECT
			*
		FROM
			cate1
		ORDER BY
			cate1_idx ASC
	</select>
	
	
	<select id="selectCateTwo" parameterType="Integer" resultType="com.hobbycam.category.model.Cate2DTO">
		SELECT
			*
		FROM
			cate2
		WHERE
			cate1_idx = #{cate1_idx}
		ORDER BY
			cate2_idx ASC
	</select>
	
	
	<update id="updateCateOneName" parameterType="hashmap">
		UPDATE
			cate1
		SET
			cate1_name = #{cate1_name}
		WHERE
			cate1_idx = #{cate1_idx}
	</update>
	
</mapper>