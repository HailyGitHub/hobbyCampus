<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hobby.admin">
	<insert id="insertAdmin" parameterType="com.hobbycam.admin.model.AdminDTO">
		INSERT INTO
			admin
		VALUES(
			seq_admin.nextval,
			#{a_email},
			#{a_pwd},
			#{a_name},
			#{a_img}
		)
	</insert>
	
	<select id="selectAdmin" parameterType="hashmap" resultType="String">
		SELECT
			a_email
		FROM
			admin
		WHERE
			a_email = #{a_email}
			And
			a_pwd = #{a_pwd}
	</select>
	
</mapper>